# StudyScenes Environment Configuration

# Toggle mock AI services (set to false when real API keys are configured)
USE_MOCK_AI=true

# Toggle mock TTS (set to false to use OpenAI TTS)
USE_MOCK_TTS=true
TTS_VOICE=alloy

# Database URL (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite+aiosqlite:///./studyscenes.db

# OpenAI API key (required when USE_MOCK_AI=false)
# OPENAI_API_KEY=sk-...

# Storage path for generated files
STORAGE_PATH=./storage

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Video clip provider: "mock" (Ken Burns zoom) or "runway" (Runway ML API)
VIDEO_PROVIDER=mock

# Runway ML API key (required when VIDEO_PROVIDER=runway)
# RUNWAY_API_KEY=

# Per-scene clip duration in seconds (Runway supports 4, 6, 8)
SCENE_CLIP_SECONDS=6

# Max total clip seconds (cost cap for Runway)
MAX_TOTAL_VIDEO_SECONDS=90
